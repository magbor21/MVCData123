@model Country


@{
    ViewData["Title"] = "Add a Country ";
}


<h3> Add a Country </h3>

@if (User.IsInRole("Admin"))
{
    <div id="add">
        <form asp-controller="IDCountries" asp-action="CountryAdd" method="post" role="form">

            <div>
                <label asp-for="Name"></label><br />
                <input asp-for="Name" /><br />
                <span style="color:rebeccapurple" asp-validation-for="Name"></span> <br />
            </div>

            <div>
                <input type="submit" class="btn btn-primary" name="btnAddCountry" value="Save" />
            </div>
        </form>
    </div>
}