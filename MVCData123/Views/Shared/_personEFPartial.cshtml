@model PersonModel

<div class="container">
    <div class="row">
        <div class="col-sm-2">@Model.Name</div>
        <div class="col-sm-2">@Model.CurrentCity.Name</div>
        <div class="col-sm-2">@Model.PersonLanguages.Count()</div>
        <div class="col-sm-2">
            <input type="button" class="btn btn-primary" onclick="personDetails(this,  @Model.Id)" value="Details" />
        </div>
        <div class="col-sm-1">
            <input type="button" class="btn btn-primary" onclick="deleteEFPersonId(this,  @Model.Id)" value="&#10007;" />
        </div>

    </div>
</div>