@model Language

<div class="container">
    <div class="row">
        <div class="col-sm-2">@Model.Name</div>
        <div class="col-sm-2">@Model.PersonLanguages.Count()</div>
        <div class="col-sm-2">
            <input type="button" class="btn btn-primary" onclick="languageDetails(this,  @Model.Id)" value="Details" />
        </div>
        <div class="col-sm-1">
            @if(Model.PersonLanguages.Count() == 0)
            {
                <input type="button" class="btn btn-primary" onclick="deleteEFLanguageId(this,  @Model.Id)" value="&#10007;" />
            }
        </div>

    </div>
</div>