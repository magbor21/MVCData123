@model IEnumerable<City>

@{
    ViewData["Title"] = "Cities ";
}


<h3> Cities </h3>

<div>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Add", "IDCities")'">Add City</button>
    <br />
</div>

<div id="errorEFMessages"></div>

<table class="table table-sm">
    <thead>
        <tr>
            <th scope="col"> Name </th>
            <th scope="col"> Country </th>
            <th scope="col"> Citizens </th>
            <th scope="col"> Details </th>
            <th scope="col"> Delete </th>
        </tr>
    </thead>


    @if (Model.Any() == true)
    {
        <tbody>
            @foreach (var item in Model)
            {
                <partial name="_cityIDPartial" model="item" />
            }
        </tbody>
    }
</table>