@model PersonModel
@{
    ViewData["Title"] = "Person Details ";
}


<h3> Person Details </h3>

@if (Model != null)
{

    <div class="container" id="add">
        <form asp-controller="IDPeople" asp-action="PersonEdit" method="post" role="form">
            <div>
                <label asp-for="Id">Person ID: @Model.Id </label><br />
                <input asp-for="Id" type="text" value="@Model.Id" hidden />
            </div>

            <div>
                <label asp-for="Name"></label><br />
                <input asp-for="Name" value="@Model.Name" /><br />
            </div>
            <div>
                <label asp-for="Phone"></label><br />
                <input asp-for="Phone" value="@Model.Phone" /><br />
            </div>
            <div>
                <div class="control-label">City</div>
                <select asp-for="CurrentCityID" class="form-control" asp-items="ViewBag.Cities"></select><br />
                <span style="color:rebeccapurple" asp-validation-for="CurrentCityID"></span> <br />
            </div>
            <div>
                <input type="submit" class="btn btn-primary" name="btnEditPerson" value="Save" />
            </div>


        </form>
        <br />
        <div>
            @if (Model.PersonLanguages.Count() > 0)
            {
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th scope="col">Languages</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (PersonLanguage item in Model.PersonLanguages)
                        {
                        <tr>
                            <td>@item.Language.Name</td>
                        </tr>
                        }
                    </tbody>
                </table>
            }
        </div>

        <div>
            <form asp-controller="IDPeople" asp-action="Languages" method="post" role="form">
                <input asp-for="Id" type="text" value="@Model.Id" hidden />
                <input type="submit" class="btn btn-primary" name="btnPersonLanguage" value="Edit Languages" />
            </form>
        </div>

    </div>
}
else
{
    <span style="color:red">No person data available</span>
}